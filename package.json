{
  "name": "web-socket-lab",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "dev:api": "nodemon --api",
    "start": "rimraf -rf client/.parcel-cache client/public && ts-node server/src/index.ts --prod",
    "start:api": "ts-node server/src/index.ts --api"
  },
  "engines": {
    "node": "22"
  },
  "nodemonConfig": {
    "ignore": [
      "**/node_modules/**",
      "**/docs/**",
      "**/test/**"
    ],
    "watch": [
      "server/src",
      "server/.env.dev"
    ],
    "ext": "ts,tsx,js,jsx,html",
    "exec": "ts-node server/src/index.ts"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
